{
	"css.customAtRules": [
		"import",
		"theme",
		"plugin",
		"custom-variant",
		"utility",
		"variant",
		"apply",
		"reference",
		"tailwind",
		"layer",
		"config",
		"source"
	],
	"css.lint.unknownAtRules": "ignore",
	"css.validate": true,
	"scss.lint.unknownAtRules": "ignore",
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"tailwindCSS.experimental.classRegex": [
		["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
		["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
	]
}
